.container
  %h1 Alumnos
  #students
  = link_to "Nuevo alumno", new_student_path,class:'btn btn-primary'

  %table.table
    %thead
      %th Nombre
      %th Apellidos
      %th Genero
      %th Fecha de nacimiento
      %th
      %th
      

    %tbody
      - @students.each do |student|
        %tr
          %td= student.name
          %td= student.last_name
          %td= student.gender
          %td= student.date_of_birth
          %td= link_to "Ver este alumno", student,class:'btn btn-secondary'
          %td= link_to 'Eliminar alumno', student, :method => :delete, data: {:confirm => 'Are you sure?'} ,class:'btn btn-danger'
      %p
        
