.container
  %h1 Profesores
  = link_to 'Nuevo profesor', new_teacher_path,class:'btn btn-primary'
  %table.table
    %thead
      %tr
        %th Nombre
        %th Apellidos
        %th Genero
        %th{:colspan => "3"}
    %tbody
      - @teachers.each do |teacher|
        %tr
          %td= teacher.name
          %td= teacher.last_name
          %td= teacher.gender
          %td= link_to 'Ver este profesor', teacher,class:'btn btn-primary'
          %td= link_to 'Eliminar profesor', teacher, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger'
  %br/
  